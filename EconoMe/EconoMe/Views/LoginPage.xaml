<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="EconoMe.Views.LoginPage"
             xmlns:components="clr-namespace:EconoMe.Views.Components">
    <ContentPage.Content>
        <Grid VerticalOptions="FillAndExpand"
              BackgroundColor="{StaticResource White}">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="6*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Text="Welcome to EconoMe" TextColor="Black"
                       FontSize="Title"/>
                
                <StackLayout Grid.Row="1" Padding="55,0"
                             VerticalOptions="Center">
                    <components:BorderlessEntry Placeholder="Email"
                           Text="{Binding Email.Value}"
                           TextColor="{StaticResource Black}"
                           PlaceholderColor="{StaticResource Black}"/>
                    <components:BorderlessEntry Placeholder="Password" 
                           Text="{Binding Password.Value}"
                           TextColor="{StaticResource Black}"
                           PlaceholderColor="{StaticResource Black}"
                           IsPassword="True"/>
                    
                    <Button Text="Login" 
                            VerticalOptions="End"
                            Margin="0,10,0,0"
                            Command="{Binding DoLoginCommand}"
                            Style="{StaticResource BaseButtonStyle}"/>
                </StackLayout>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>